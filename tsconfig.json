{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck" : true,
    "esModuleInterop": true
  },
  "include" : [
      "./src/**/*", "Reference/examples"
  ],
  "exclude" : [
      "./src/**/tests/**/*",
      "node_modules"
  ]
}
