{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
